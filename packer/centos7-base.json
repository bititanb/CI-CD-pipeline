{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/c7-kvm-ks.cfg<enter><wait>"
      ],
      "boot_wait": "40s",
      "disk_interface": "virtio",
      "disk_size": 100000,
      "format": "qcow2",
      "headless": false,
      "http_directory": "docroot",
      "http_port_max": 10089,
      "http_port_min": 10082,
      "iso_checksum": "88c0437f0a14c6e2c94426df9d43cd67",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirror.nsc.liu.se/centos-store/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "net_device": "virtio-net",
      "output_directory": "centos7-base-img",
      "qemuargs": [
        [
          "-m",
          "2048M"
        ],
        [
          "-smp",
          "cpus=1,maxcpus=16,cores=4"
        ]
      ],
      "shutdown_command": "shutdown -P now",
      "ssh_host_port_max": 2229,
      "ssh_host_port_min": 2222,
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "taskmngr1"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "command": "tar zcf stardata-install.tar.gz stardata-install/",
      "type": "shell-local"
    },
    {
      "destination": "/root/stardata-install.tar.gz",
      "source": "stardata-install.tar.gz",
      "type": "file"
    },
    {
      "inline": [
        "cd /root/",
        "tar zxf stardata-install.tar.gz",
        "cd stardata-install/",
        "./install.sh",
        "yum clean all"
      ],
      "pause_before": "5s",
      "type": "shell"
    }
  ]
}

